@import '../../styles.scss';

//Standard classes
.trackSteps .ui-steps .ui-steps-item {
    width: 12%;
}

.trackSteps .ui-steps.steps-custom {
    margin-bottom: 30px;
}

.trackSteps .ui-steps.steps-custom .ui-steps-item .ui-menuitem-link {
    height: 12px !important;
    padding: 0 1em;
    overflow: visible;
    margin-top: -7px;
}

.trackSteps .ui-steps.steps-custom .ui-steps-item .ui-steps-number {
    background-color: #0081c2;
    color: #FFFFFF;
    display: inline-block;
    width: 36px;
    border-radius: 50%;
    margin-top: -14px;
    margin-bottom: 10px;
}

.trackSteps .ui-steps.steps-custom .ui-steps-item .ui-steps-title {
    color: #555555;
    font-size: 7px;

}

.trackSteps .ui-steps .ui-steps-item .ui-steps-title{
    display: block !important;
}

.trackSteps .ui-steps .ui-steps-number{
    font-size: 150%;
}

